root = true

[*]
insert_final_newline = true

[*.json]
indent_style = space
indent_size = 2

[*.yml]
indent_style = space
indent_size = 2

[*.{js,ts}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.pug]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[*.{less,css}]
indent_style = tab

[*.cs]
indent_style = space
indent_size = 4
